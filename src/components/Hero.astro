---
interface Props {
  title: string;
  subtitle: string;
  ctaLabel: string;
  ctaHref: string;
}

const { title, subtitle, ctaHref, ctaLabel } = Astro.props;
---

<section class="relative overflow-hidden border-b border-slate-800/40 bg-slate-900">
  <!-- Imagen de fondo -->
  <div
    class="pointer-events-none absolute inset-0 bg-cover bg-center bg-no-repeat"
    style="background-image: url('/media/fondoprueba.jpg');"
    aria-hidden="true"
  />
  <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-black/20 via-slate-900/25 to-black/40" />

  <div class="relative mx-auto flex min-h-screen max-w-5xl flex-col gap-10 px-4 py-16 sm:px-6 sm:py-20 lg:flex-row lg:items-center">
    <div class="relative z-10 max-w-xl space-y-6 rounded-3xl bg-white/5 p-6 shadow-2xl shadow-black/40 ring-1 ring-white/10 backdrop-blur-xl sm:p-7 lg:p-8">
      <h1 class="text-4xl font-serif font-semibold tracking-tight text-white sm:text-5xl lg:text-6xl">
        {title}
      </h1>
      <p class="text-lg leading-[2.6rem] text-texto sm:text-xl">
        {subtitle}
      </p>
      <div class="flex flex-wrap items-center gap-3">
        <a
          href={ctaHref}
          class="inline-flex items-center justify-center rounded-full bg-vino-500/90 px-6 py-2.5 text-sm font-semibold text-white shadow-lg shadow-vino-900/50 transition hover:bg-vino-400 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-vino-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900"
        >
          {ctaLabel}
        </a>
        <p class="text-xs text-texto">
          Selecci√≥n curada de accesorios y vinotecas para amantes del vino.
        </p>
      </div>
    </div>
  </div>
</section>


