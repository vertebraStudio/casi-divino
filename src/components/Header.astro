---
const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/colecciones', label: 'Colecciones' },
  { href: '/productos', label: 'Destacados' },
  { href: '/blog', label: 'Blog' },
];
---

<header class="sticky top-0 z-40 border-b border-slate-200/60 bg-white/80 dark:bg-slate-900/80 backdrop-blur">
  <div class="relative mx-auto grid max-w-5xl grid-cols-3 items-center px-4 py-3 sm:px-6">
    <a href="/" class="flex items-center gap-3 leading-tight">
      <img
        src="/media/logoprovisional.png"
        alt="Casi Divino"
        class="h-10 w-auto max-h-10 shrink-0 object-contain"
        loading="lazy"
      />
      <div class="flex flex-col">
        <span class="text-lg font-serif font-semibold tracking-tight text-vino-600 dark:text-vino-200">
          Casi Divino
        </span>
        <span class="text-xs font-sans text-texto dark:text-texto">
          Guías y reseñas de vino
        </span>
      </div>
    </a>

    <nav class="hidden items-center justify-center gap-6 text-sm font-medium sm:flex">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-texto transition hover:[color:#E5C256] dark:text-texto dark:hover:[color:#E5C256]"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center justify-end gap-2">
      <a href="/contacto" class="hidden btn-vino-outline sm:inline-flex">
        Contacto
      </a>
      <button
        type="button"
        class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-slate-200 bg-white text-texto shadow-sm transition hover:border-vino-500 hover:text-vino-600 dark:border-slate-800 dark:bg-slate-900 dark:text-texto dark:hover:border-vino-300 dark:hover:text-vino-200 sm:hidden"
        aria-label="Abrir menú"
        id="mobile-menu-toggle"
      >
        ☰
      </button>
    </div>
  </div>

  <div
    id="mobile-menu"
    class="mx-auto hidden max-w-5xl space-y-1 border-t border-slate-200 bg-white px-4 py-3 text-sm dark:border-slate-800 dark:bg-slate-900 sm:hidden"
  >
    {navItems.map((item) => (
      <a
        href={item.href}
        class="block rounded-md px-2 py-1 text-texto transition hover:bg-vino-50 dark:text-texto dark:hover:bg-slate-900 hover:[color:#E5C256]"
      >
        {item.label}
      </a>
    ))}
    <a href="/contacto" class="mt-2 block text-center btn-vino-outline">
      Contacto
    </a>
  </div>

  <script is:inline>
    const mobileToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileToggle?.addEventListener('click', () => {
      if (!mobileMenu) return;
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</header>


