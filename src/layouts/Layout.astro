---
import '../styles/global.css';

import Header from '../components/Header.astro';
import AffiliateDisclaimer from '../components/AffiliateDisclaimer.astro';
import SEOHead from '../components/SEOHead.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, canonical, ogImage, noindex } = Astro.props;
---

<!doctype html>
<html lang="es" class="h-full scroll-smooth dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />
    <SEOHead
      {title}
      {description}
      {canonical}
      {ogImage}
      {noindex}
    />
  </head>

  <body class="flex min-h-full flex-col bg-white text-texto dark:bg-slate-900 dark:text-texto">
    <Header />

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white/90 py-8 text-xs text-slate-500 dark:border-slate-800 dark:bg-slate-900/90 dark:text-slate-400 sm:py-10">
      <div class="mx-auto max-w-5xl px-4 sm:px-6">
        <div class="grid gap-8 md:grid-cols-3">
          {/* Logo y descripción */}
          <div class="space-y-3">
            <a href="/" class="flex items-center gap-3">
              <img
                src="/media/logoprovisional.png"
                alt="Casi Divino"
                class="h-10 w-auto max-h-10 shrink-0 object-contain"
                loading="lazy"
              />
              <div class="flex flex-col">
                <span class="text-lg font-serif font-semibold tracking-tight text-vino-600 dark:text-vino-200">
                  Casi Divino
                </span>
                <span class="text-xs font-sans text-texto dark:text-texto">
                  Guías y reseñas de vino
                </span>
              </div>
            </a>
            <p class="text-xs text-texto dark:text-texto max-w-2xl">
              Participamos en el Programa de Afiliados de Amazon EU. Esto no supone un coste adicional para ti.
            </p>
          </div>

          {/* Enlaces */}
          <div class="space-y-3">
            <h3 class="font-serif text-sm font-semibold text-texto dark:text-texto">
              Enlaces
            </h3>
            <nav class="grid grid-cols-2 gap-x-4 gap-y-2">
              <a
                href="/"
                class="text-texto transition hover:text-vino-600 dark:text-texto dark:hover:text-vino-200"
              >
                Inicio
              </a>
              <a
                href="/colecciones"
                class="text-texto transition hover:text-vino-600 dark:text-texto dark:hover:text-vino-200"
              >
                Colecciones
              </a>
              <a
                href="/productos"
                class="text-texto transition hover:text-vino-600 dark:text-texto dark:hover:text-vino-200"
              >
                Destacados
              </a>
              <a
                href="/blog"
                class="text-texto transition hover:text-vino-600 dark:text-texto dark:hover:text-vino-200"
              >
                Blog
              </a>
              <a
                href="/contacto"
                class="text-texto transition hover:text-vino-600 dark:text-texto dark:hover:text-vino-200"
              >
                Contacto
              </a>
            </nav>
          </div>

          {/* Información legal */}
          <div class="space-y-3">
            <h3 class="font-serif text-sm font-semibold text-texto dark:text-texto">
              Información
            </h3>
            <div class="space-y-2 text-[11px] sm:text-xs">
              <p>Contenido con fines informativos. Bebe siempre con responsabilidad.</p>
            </div>
          </div>
        </div>
        <div class="mt-8 border-t border-slate-200 pt-6 text-center text-[11px] text-texto dark:border-slate-800 dark:text-texto sm:text-xs">
          <p>© {new Date().getFullYear()} Casi Divino. Todos los derechos reservados.</p>
          <p class="mt-2">
            Página web diseñada con mucho cariño por{' '}
            <a
              href="https://www.vertebrastudio.es"
              target="_blank"
              rel="noopener noreferrer"
              class="group relative inline-block font-medium transition-colors duration-300"
              style="color: #E5C256;"
            >
              Vertebra Studio
              <span class="absolute bottom-0 left-0 h-0.5 w-0 bg-[#E5C256] transition-all duration-300 ease-out group-hover:w-full"></span>
            </a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>


