---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ComparisonTable from '../components/ComparisonTable.astro';
import ProductCard from '../components/ProductCard.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

const blogEntries = await getCollection('blog');
const reviewEntries = await getCollection('reviews');

const featuredArticles = blogEntries
  .filter((entry) => entry.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const latestReviews = reviewEntries
  .filter((entry) => entry.data.destacado)
  .slice(0, 3);

const comparisonProducts =
  latestReviews.length > 0
    ? latestReviews.map((review) => ({
        title: review.data.title,
        image: review.data.imagen_destacada,
        price: review.data.precio,
        rating: review.data.valoracion,
        affiliateUrl: review.data.enlace_afiliado,
        pros: review.data.pros,
        contras: review.data.contras,
      }))
    : [];
---

<Layout
  title="Casi Divino | Guías, accesorios y vinotecas recomendadas"
  description="Casi Divino es tu guía de confianza en el mundo del vino: aprende a catar, descubre accesorios imprescindibles y compara las mejores vinotecas con enlaces de afiliado a Amazon."
>
  <Hero
    title="Convierte cada copa en una experiencia memorable."
    subtitle="Te ayudamos a elegir las mejores vinotecas, copas y accesorios de vino, con reseñas honestas y comparativas pensadas para maximizar tu presupuesto."
    ctaLabel="Ver mejores vinotecas"
    ctaHref="/vinotecas"
  />

  <section class="border-b border-slate-900/40 bg-slate-950">
    <div class="mx-auto flex max-w-5xl flex-col gap-6 px-4 py-10 sm:px-6 sm:py-12">
      <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
          <p class="text-[11px] font-semibold uppercase tracking-[0.24em] text-vino-300 sm:text-xs">
            Inspiración
          </p>
          <h2 class="mt-1 text-3xl font-serif font-semibold tracking-tight text-slate-50 sm:text-4xl">
            Colecciones destacadas
          </h2>
          <p class="mt-3 max-w-xl text-base text-slate-200 sm:text-[17px]">
            Inspírate con selecciones curadas para diferentes momentos: desde una cena íntima hasta una cata con amigos.
          </p>
        </div>
        <p class="mt-3 max-w-xs text-xs text-slate-400 sm:text-[13px]">
          Desliza horizontalmente para descubrir más colecciones. Pronto podrás guardar tus favoritas.
        </p>
      </div>

      <div class="relative -mx-4 sm:-mx-6">
        <style is:inline>
          {`
            #featured-collections {
              scrollbar-width: none;
              -ms-overflow-style: none;
            }
            #featured-collections::-webkit-scrollbar {
              display: none;
            }
          `}
        </style>
        <div
          id="featured-collections"
          class="flex snap-x snap-mandatory gap-6 overflow-x-auto px-4 pb-4 sm:px-6"
          style="scrollbar-width: none; -ms-overflow-style: none;"
        >
            <a
              href="/vinotecas"
              class="group relative flex min-h-[400px] min-w-[calc(100vw-3rem)] flex-shrink-0 snap-start overflow-hidden rounded-2xl border border-white/10 text-slate-50 shadow-lg shadow-black/30 ring-1 ring-white/10 sm:min-h-[460px] sm:min-w-[calc(100vw-8rem)] md:min-w-[600px]"
            >
              <img
                src="/media/ejemplo1.jpg"
                alt="Vinotecas para casa"
                class="absolute inset-0 h-full w-full object-cover"
                loading="lazy"
              />
              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/90 via-black/70 to-transparent" />
              <div class="relative flex h-full flex-col justify-end p-6 sm:p-8">
                <div class="space-y-3">
                  <p class="text-xs font-medium uppercase tracking-[0.2em] text-vino-100/90">
                    Hogar
                  </p>
                  <h3 class="text-2xl font-serif font-semibold sm:text-3xl">
                    Vinotecas para casa
                  </h3>
                  <p class="text-sm leading-relaxed text-vino-50/90 sm:text-base">
                    Mantén tus botellas a la temperatura perfecta con modelos silenciosos y elegantes.
                  </p>
                </div>
                <div class="mt-6 flex items-center justify-between text-xs text-vino-50/90 sm:text-sm">
                  <span class="inline-flex items-center gap-1.5 rounded-full bg-black/40 px-4 py-2">
                    <span class="h-2 w-2 rounded-full bg-emerald-300" />
                    6 modelos recomendados
                  </span>
                  <span class="inline-flex items-center gap-1.5 text-xs font-medium group-hover:underline sm:text-sm">
                    Ver selección
                    <span aria-hidden="true">↗</span>
                  </span>
                </div>
              </div>
            </a>

            <a
              href="/accesorios"
              class="group relative flex min-h-[400px] min-w-[calc(100vw-3rem)] flex-shrink-0 snap-start overflow-hidden rounded-2xl border border-slate-700/80 text-slate-50 shadow-lg shadow-black/30 ring-1 ring-white/5 sm:min-h-[460px] sm:min-w-[calc(100vw-8rem)] md:min-w-[600px]"
            >
              <img
                src="/media/ejemplo2.jpg"
                alt="Copas y cristalería"
                class="absolute inset-0 h-full w-full object-cover"
                loading="lazy"
              />
              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/90 via-black/70 to-transparent" />
              <div class="relative flex h-full flex-col justify-end p-6 sm:p-8">
                <div class="space-y-3">
                  <p class="text-xs font-medium uppercase tracking-[0.2em] text-slate-200">
                    Mesa y copa
                  </p>
                  <h3 class="text-2xl font-serif font-semibold sm:text-3xl">
                    Copas y cristalería
                  </h3>
                  <p class="text-sm leading-relaxed text-slate-100/90 sm:text-base">
                    Elige copas que potencien aromas, textura y color para cada tipo de vino.
                  </p>
                </div>
                <div class="mt-6 flex items-center justify-between text-xs text-slate-100/90 sm:text-sm">
                  <span class="inline-flex items-center gap-1.5 rounded-full bg-black/35 px-4 py-2">
                    <span class="h-2 w-2 rounded-full bg-vino-300" />
                    4 colecciones comparadas
                  </span>
                  <span class="inline-flex items-center gap-1.5 text-xs font-medium group-hover:underline sm:text-sm">
                    Ver selección
                    <span aria-hidden="true">↗</span>
                  </span>
                </div>
              </div>
            </a>

            <a
              href="/accesorios"
              class="group relative flex min-h-[400px] min-w-[calc(100vw-3rem)] flex-shrink-0 snap-start overflow-hidden rounded-2xl border border-emerald-500/50 text-emerald-50 shadow-lg shadow-black/30 ring-1 ring-white/10 sm:min-h-[460px] sm:min-w-[calc(100vw-8rem)] md:min-w-[600px]"
            >
              <img
                src="/media/ejemplo3.jpg"
                alt="Accesorios imprescindibles para vino"
                class="absolute inset-0 h-full w-full object-cover"
                loading="lazy"
              />
              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/90 via-black/70 to-transparent" />
              <div class="relative flex h-full flex-col justify-end p-6 sm:p-8">
                <div class="space-y-3">
                  <p class="text-xs font-medium uppercase tracking-[0.2em] text-emerald-100">
                    Ritual
                  </p>
                  <h3 class="text-2xl font-serif font-semibold sm:text-3xl">
                    Accesorios imprescindibles
                  </h3>
                  <p class="text-sm leading-relaxed text-emerald-50/90 sm:text-base">
                    Sacacorchos, decantadores y aireadores para disfrutar cada botella al máximo.
                  </p>
                </div>
                <div class="mt-6 flex items-center justify-between text-xs text-emerald-50/90 sm:text-sm">
                  <span class="inline-flex items-center gap-1.5 rounded-full bg-black/35 px-4 py-2">
                    <span class="h-2 w-2 rounded-full bg-emerald-300" />
                    Kit básico recomendado
                  </span>
                  <span class="inline-flex items-center gap-1.5 text-xs font-medium group-hover:underline sm:text-sm">
                    Ver selección
                    <span aria-hidden="true">↗</span>
                  </span>
                </div>
              </div>
            </a>

            <a
              href="/accesorios"
              class="group relative flex min-h-[400px] min-w-[calc(100vw-3rem)] flex-shrink-0 snap-start overflow-hidden rounded-2xl border border-amber-500/60 text-amber-50 shadow-lg shadow-black/30 ring-1 ring-white/10 sm:min-h-[460px] sm:min-w-[calc(100vw-8rem)] md:min-w-[600px]"
            >
              <img
                src="/media/ejemplo4.jpg"
                alt="Ideas para regalar a amantes del vino"
                class="absolute inset-0 h-full w-full object-cover"
                loading="lazy"
              />
              <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/90 via-black/70 to-transparent" />
              <div class="relative flex h-full flex-col justify-end p-6 sm:p-8">
                <div class="space-y-3">
                  <p class="text-xs font-medium uppercase tracking-[0.2em] text-amber-100">
                    Para regalar
                  </p>
                  <h3 class="text-2xl font-serif font-semibold sm:text-3xl">
                    Ideas para amantes del vino
                  </h3>
                  <p class="text-sm leading-relaxed text-amber-50/90 sm:text-base">
                    Packs y detalles con efecto "wow" para sorprender sin complicarte.
                  </p>
                </div>
                <div class="mt-6 flex items-center justify-between text-xs text-amber-50/90 sm:text-sm">
                  <span class="inline-flex items-center gap-1.5 rounded-full bg-black/35 px-4 py-2">
                    <span class="h-2 w-2 rounded-full bg-amber-300" />
                    Selección para cualquier presupuesto
                  </span>
                  <span class="inline-flex items-center gap-1.5 text-xs font-medium group-hover:underline sm:text-sm">
                    Ver selección
                    <span aria-hidden="true">↗</span>
                  </span>
                </div>
              </div>
            </a>
        </div>
        <button
          type="button"
          id="collections-prev"
          class="absolute -left-1 top-1/2 z-10 hidden -translate-y-1/2 items-center justify-center rounded-full border border-white/15 bg-black/60 text-xs text-slate-100 shadow-lg shadow-black/40 backdrop-blur hover:bg-black/80 sm:-left-5 sm:flex sm:h-10 sm:w-10"
          aria-label="Colección anterior"
        >
          <span aria-hidden="true">←</span>
        </button>
        <button
          type="button"
          id="collections-next"
          class="absolute -right-1 top-1/2 z-10 hidden -translate-y-1/2 items-center justify-center rounded-full border border-white/15 bg-black/60 text-xs text-slate-100 shadow-lg shadow-black/40 backdrop-blur hover:bg-black/80 sm:-right-5 sm:flex sm:h-10 sm:w-10"
          aria-label="Colección siguiente"
        >
          <span aria-hidden="true">→</span>
        </button>
        <div class="pointer-events-none absolute inset-y-4 right-0 w-20 bg-gradient-to-l from-slate-950 to-transparent sm:inset-y-6 sm:w-28" />
      </div>
      <div class="mt-6 flex justify-center">
        <a
          href="/colecciones"
          class="inline-flex items-center gap-2 rounded-full bg-white/10 px-5 py-2 text-xs font-semibold uppercase tracking-[0.16em] text-slate-100 shadow-sm shadow-black/40 ring-1 ring-white/20 backdrop-blur transition hover:bg-white/20 hover:ring-white/40"
        >
          Ver todas las colecciones
          <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </section>
  <section class="border-b border-slate-900/40 bg-slate-950/95">
    <div class="mx-auto flex max-w-5xl flex-col gap-6 px-4 py-10 sm:px-6 sm:py-12">
      <div class="flex flex-col gap-2 sm:flex-row sm:items-end sm:justify-between">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-vino-300">
            Productos recomendados
          </p>
          <h2 class="mt-1 text-2xl font-serif font-semibold tracking-tight text-slate-50 sm:text-3xl">
            Nuestra selección para empezar bien la bodega
          </h2>
          <p class="mt-2 max-w-xl text-sm text-slate-300">
            Una selección rápida de productos con buena relación calidad-precio para que no tengas que comparar durante horas.
          </p>
        </div>
        <p class="mt-2 max-w-xs text-[11px] text-slate-400 sm:text-xs">
          Enlaces de afiliado a Amazon: tú pagas lo mismo y ayudas a mantener Casi Divino.
        </p>
      </div>

      <div class="grid gap-4 md:grid-cols-3">
        <article class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-800/80 bg-slate-950/80 text-sm shadow-lg shadow-black/40 ring-1 ring-white/5">
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src="/media/ejemplo1.jpg"
              alt="Vinoteca compacta para 12 botellas"
              class="h-full w-full object-cover transition duration-500 group-hover:scale-105"
              loading="lazy"
            />
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
            <div class="pointer-events-none absolute left-3 top-3 rounded-full bg-black/70 px-2 py-0.5 text-[10px] font-semibold uppercase tracking-[0.18em] text-vino-100">
              Vinoteca
            </div>
          </div>
          <div class="flex flex-1 flex-col gap-3 p-4">
            <h3 class="line-clamp-2 font-serif text-[15px] font-semibold text-slate-50">
              Vinoteca compacta para 12 botellas
            </h3>
            <p class="line-clamp-3 text-xs leading-relaxed text-slate-300">
              Ideal para pisos pequeños: silenciosa, con control electrónico de temperatura y puerta de cristal ahumado.
            </p>
            <div class="mt-1 flex items-center justify-between text-[11px] text-amber-300">
              <div class="flex items-center gap-0.5">
                <span>★★★★★</span>
                <span class="ml-1 text-[10px] text-slate-400">4,7 / 5</span>
              </div>
              <span class="rounded-full bg-emerald-500/10 px-2 py-0.5 text-[10px] font-semibold text-emerald-300">
                Superventas
              </span>
            </div>
            <div class="mt-1 flex items-center justify-between text-sm font-semibold">
              <span class="text-slate-50">€189,99</span>
              <span class="text-xs font-normal text-slate-400 line-through">€219,99</span>
            </div>
            <a
              href="#"
              class="mt-3 inline-flex items-center justify-center rounded-full bg-vino-600 px-3 py-2 text-xs font-semibold text-white shadow-md shadow-vino-900/50 transition hover:bg-vino-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-vino-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
            >
              Ver en Amazon
            </a>
          </div>
        </article>

        <article class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-800/80 bg-slate-950/80 text-sm shadow-lg shadow-black/40 ring-1 ring-white/5">
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src="/media/ejemplo2.jpg"
              alt="Juego de 6 copas de vino tinto"
              class="h-full w-full object-cover transition duration-500 group-hover:scale-105"
              loading="lazy"
            />
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
            <div class="pointer-events-none absolute left-3 top-3 rounded-full bg-black/70 px-2 py-0.5 text-[10px] font-semibold uppercase tracking-[0.18em] text-vino-100">
              Copas
            </div>
          </div>
          <div class="flex flex-1 flex-col gap-3 p-4">
            <h3 class="line-clamp-2 font-serif text-[15px] font-semibold text-slate-50">
              Juego de 6 copas de vino tinto
            </h3>
            <p class="line-clamp-3 text-xs leading-relaxed text-slate-300">
              Cristal fino, resistente al lavavajillas y con forma pensada para concentrar aromas y suavizar taninos.
            </p>
            <div class="mt-1 flex items-center justify-between text-[11px] text-amber-300">
              <div class="flex items-center gap-0.5">
                <span>★★★★☆</span>
                <span class="ml-1 text-[10px] text-slate-400">4,5 / 5</span>
              </div>
              <span class="rounded-full bg-slate-100/5 px-2 py-0.5 text-[10px] font-semibold text-slate-200">
                Mejor calidad-precio
              </span>
            </div>
            <div class="mt-1 flex items-center justify-between text-sm font-semibold">
              <span class="text-slate-50">€39,90</span>
            </div>
            <a
              href="#"
              class="mt-3 inline-flex items-center justify-center rounded-full bg-vino-600 px-3 py-2 text-xs font-semibold text-white shadow-md shadow-vino-900/50 transition hover:bg-vino-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-vino-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
            >
              Ver en Amazon
            </a>
          </div>
        </article>

        <article class="group flex h-full flex-col overflow-hidden rounded-2xl border border-slate-800/80 bg-slate-950/80 text-sm shadow-lg shadow-black/40 ring-1 ring-white/5">
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src="/media/ejemplo3.jpg"
              alt="Kit de accesorios para vino"
              class="h-full w-full object-cover transition duration-500 group-hover:scale-105"
              loading="lazy"
            />
            <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
            <div class="pointer-events-none absolute left-3 top-3 rounded-full bg-black/70 px-2 py-0.5 text-[10px] font-semibold uppercase tracking-[0.18em] text-vino-100">
              Accesorios
            </div>
          </div>
          <div class="flex flex-1 flex-col gap-3 p-4">
            <h3 class="line-clamp-2 font-serif text-[15px] font-semibold text-slate-50">
              Kit de accesorios para vino
            </h3>
            <p class="line-clamp-3 text-xs leading-relaxed text-slate-300">
              Incluye sacacorchos, tapón al vacío y aireador, en un estuche elegante perfecto también para regalar.
            </p>
            <div class="mt-1 flex items-center justify-between text-[11px] text-amber-300">
              <div class="flex items-center gap-0.5">
                <span>★★★★☆</span>
                <span class="ml-1 text-[10px] text-slate-400">4,4 / 5</span>
              </div>
              <span class="rounded-full bg-amber-500/10 px-2 py-0.5 text-[10px] font-semibold text-amber-300">
                Ideal para regalo
              </span>
            </div>
            <div class="mt-1 flex items-center justify-between text-sm font-semibold">
              <span class="text-slate-50">€24,95</span>
            </div>
            <a
              href="#"
              class="mt-3 inline-flex items-center justify-center rounded-full bg-vino-600 px-3 py-2 text-xs font-semibold text-white shadow-md shadow-vino-900/50 transition hover:bg-vino-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-vino-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
            >
              Ver en Amazon
            </a>
          </div>
        </article>
      </div>
    </div>
  </section>
  <script is:inline>
    const collectionsContainer = document.getElementById('featured-collections');
    const collectionsPrev = document.getElementById('collections-prev');
    const collectionsNext = document.getElementById('collections-next');

    function scrollCollections(direction) {
      if (!collectionsContainer) return;
      const firstCard = collectionsContainer.querySelector('a');
      const gap = 24; // gap-6
      const cardWidth =
        firstCard instanceof HTMLElement
          ? firstCard.offsetWidth + gap
          : collectionsContainer.clientWidth * 0.8;

      collectionsContainer.scrollBy({
        left: direction === 'next' ? cardWidth : -cardWidth,
        behavior: 'smooth',
      });
    }

    collectionsPrev?.addEventListener('click', () => scrollCollections('prev'));
    collectionsNext?.addEventListener('click', () => scrollCollections('next'));
  </script>

  <div class="mx-auto flex max-w-5xl flex-col gap-10 px-4 py-10 sm:px-6 sm:py-12">
    {comparisonProducts.length >= 2 && (
      <ComparisonTable products={comparisonProducts} />
    )}

    <section class="space-y-4">
      <div class="flex items-baseline justify-between gap-3">
        <div>
          <h2 class="text-base font-serif font-semibold text-slate-900 dark:text-slate-50">
            Reseñas destacadas
          </h2>
          <p class="text-xs text-slate-500 dark:text-slate-400">
            Selección de productos recomendados con enlaces a Amazon.
          </p>
        </div>
        <a
          href="/vinotecas"
          class="text-xs font-medium text-vino-600 underline-offset-4 hover:underline dark:text-vino-200"
        >
          Ver todas las comparativas
        </a>
      </div>

      {latestReviews.length === 0 ? (
        <p class="text-xs text-slate-500 dark:text-slate-400">
          Aún no hay reseñas publicadas. Añade contenido en
          <code class="mx-1 rounded bg-slate-100 px-1.5 py-0.5 text-[10px] dark:bg-slate-900">
            src/content/reviews
          </code>
          para empezar.
        </p>
      ) : (
        <div class="grid gap-4 md:grid-cols-3">
          {latestReviews.map((review) => (
            <ProductCard
              title={review.data.title}
              image={review.data.imagen_destacada}
              price={review.data.precio}
              rating={review.data.valoracion}
              affiliateUrl={review.data.enlace_afiliado}
              pros={review.data.pros}
              contras={review.data.contras}
            />
          ))}
        </div>
      )}
    </section>

    <section class="space-y-4">
      <div class="flex items-baseline justify-between gap-3">
        <div>
          <h2 class="text-base font-serif font-semibold text-slate-900 dark:text-slate-50">
            Últimos artículos del blog
          </h2>
          <p class="text-xs text-slate-500 dark:text-slate-400">
            Aprende a catar, conservar y servir el vino como un auténtico experto.
          </p>
        </div>
        <a
          href="/blog"
          class="text-xs font-medium text-vino-600 underline-offset-4 hover:underline dark:text-vino-200"
        >
          Ver todos los artículos
        </a>
      </div>

      {featuredArticles.length === 0 ? (
        <p class="text-xs text-slate-500 dark:text-slate-400">
          Aún no hay artículos destacados. Añade contenido en
          <code class="mx-1 rounded bg-slate-100 px-1.5 py-0.5 text-[10px] dark:bg-slate-900">
            src/content/blog
          </code>
          marcando <code>featured: true</code> en el frontmatter.
        </p>
      ) : (
        <div class="grid gap-4 md:grid-cols-3">
          {featuredArticles.map((post) => (
            <a
              href={`/blog/${post.slug}/`}
              class="group flex h-full flex-col rounded-2xl border border-slate-200 bg-white/80 p-4 text-sm shadow-sm shadow-slate-900/5 transition hover:-translate-y-0.5 hover:border-vino-500/70 hover:shadow-lg hover:shadow-vino-900/10 dark:border-slate-800 dark:bg-slate-950/80"
            >
