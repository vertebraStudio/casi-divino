  <script is:inline>
    // Efecto parallax para el separador
    (function() {
      const parallaxSeparator = document.querySelector('.parallax-separator');
      const parallaxImage = document.querySelector('.parallax-image');
      
      if (!parallaxSeparator || !parallaxImage) return;
      
      function updateParallax() {
        const rect = parallaxSeparator.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        
        // Calcular cuánto del elemento está visible
        const elementTop = rect.top;
        const elementBottom = rect.bottom;
        const elementHeight = rect.height;
        
        // Si el elemento está visible en la ventana
        if (elementBottom >= 0 && elementTop <= windowHeight) {
          // Calcular el progreso del scroll (0 cuando está arriba, 1 cuando está abajo)
          const scrollProgress = Math.max(0, Math.min(1, (windowHeight - elementTop) / (windowHeight + elementHeight)));
          
          // Aplicar transformación parallax más pronunciada
          // La imagen se mueve más lento que el scroll (efecto parallax)
          const translateY = scrollProgress * 200 - 100; // Rango de -100px a 100px para efecto más notorio
          parallaxImage.style.transform = `translateY(${translateY}px) scale(1.3)`;
        }
      }
      
      // Usar requestAnimationFrame para mejor rendimiento
      let ticking = false;
      function onScroll() {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateParallax();
            ticking = false;
          });
          ticking = true;
        }
      }
      
      // Inicializar y escuchar eventos
      updateParallax();
      window.addEventListener('scroll', onScroll, { passive: true });
      window.addEventListener('resize', updateParallax);
    })();
  </script>

